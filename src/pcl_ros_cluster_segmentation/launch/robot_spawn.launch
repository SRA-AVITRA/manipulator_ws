<launch>
  <!--Include description and control launch files-->
  <include file="$(find pcl_ros_cluster_segmentation)/launch/robot_description.launch"/>
  <include file="$(find pcl_ros_cluster_segmentation)/launch/robot_control.launch"/>

  <!--Launch a gazebo world-->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find pcl_ros_cluster_segmentation)/worlds/pr2_perception.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!--spawn a robot in gazebo world-->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
  args="-urdf -param robot_description -x 0 -y 1.8 -z 0 -R 0 -P 0 -Y 0 -model pcl_ros_cluster_segmentation"/>

  <!-- cloud transformer-->
  <node name="cloud_transformer" pkg="pcl_ros_cluster_segmentation" type="pcl_ros_cluster_segmentation_cloud_transformer" respawn="false"/>


  <!-- feature extractor-->
  <node name="feature_extractor" pkg="pcl_ros_cluster_segmentation" type="pcl_ros_cluster_segmentation_feature_extractor" respawn="false"/>


  <!-- launch rviz-->
  <node name="$(anon rviz)" pkg="rviz" type="rviz" respawn="false"
    output="screen" args="-d $(find pcl_ros_cluster_segmentation)/config/perception.rviz"/>

</launch>
